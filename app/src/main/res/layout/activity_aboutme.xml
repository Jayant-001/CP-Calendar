<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="22dp"
    tools:context=".AboutmeActivity">

    <TextView
        android:id="@+id/hh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato"
        android:text="If you find any bug plz report here:"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/kiet_email_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hh1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jayant.2024cse1207@kiet.edu"
            android:textColor="#5675C5"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:src="@drawable/redirect_ic" />

    </LinearLayout>

    <TextView
        android:id="@+id/hh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kiet_email_ll"
        android:layout_marginTop="8dp"
        android:text="Contact me:"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/contact_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hh2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7081263001"
            android:textColor="#5675C5"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:src="@drawable/redirect_ic" />

    </LinearLayout>

    <TextView
        android:id="@+id/hh3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_ll"
        android:layout_marginTop="8dp"
        android:text="Email me:"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/email_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hh3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jayantgupta730@gmail.com"
            android:textColor="#5675C5"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:src="@drawable/redirect_ic" />

    </LinearLayout>

    <TextView
        android:id="@+id/hh4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_ll"
        android:layout_marginTop="8dp"
        android:text="Connect with me:"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linked_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hh4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/linked_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="linkedin.com/in/jayant-cse"
            android:textColor="#5675C5"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:src="@drawable/redirect_ic" />

    </LinearLayout>

    <TextView
        android:id="@+id/hh5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linked_ll"
        android:layout_marginTop="8dp"
        android:text="Github:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/github_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hh5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hh5"
            android:text="github.com/Jayant-001"
            android:textColor="#5675C5"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:src="@drawable/redirect_ic" />

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy Coding"
            android:fontFamily="@font/quintessential"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="28sp" />

</RelativeLayout>
